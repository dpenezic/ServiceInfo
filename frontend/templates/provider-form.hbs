<!-- Forms -->
      <div class="main-content">
        <div class="container">
          <div class="row">
            <div class="col-sm-8 col-sm-offset-2">

            <form>
              <fieldset>
                <legend data-i18n="Provider-Registration-Form.Form-Sections.Basic.Legend"></legend>

                <div class="form-group">
                  <div class="half">
                    <div class="form-group">
                      <label for="id_name" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Name"></span><span class=error></label>
                      <input id="id_name" type="text" name="name" data-i18n-field class="form-control" ></input>
                    </div>
                  </div>

                  <div class="half">
                      <div class="form-group">
                          <label for="id_email" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Email"></span><span class="error"></span></label>
                          <div class="form-group">
                              <input id="id_email" type="email" name="email" class="form-control" placeholder="Enter your Email" >
                          </div>
                      </div>
                  </div>
                </div>

                <div class="form-group">
                    <div class="half">
                        <div class="form-group">
                            <label for="id_password1" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Password"></span><span class=error></label>
                                <input id="id_password1" type="password" name="password1" class="form-control" ></input>
                        </div>
                    </div>

                    <div class="half">
                        <div class="form-group">
                            <label for="id_password2" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.PasswordConfirm"></span><span class="error"></span></label>
                            <div class="form-group">
                                <input id="id_password2"  type="password" name="password2" class="form-control" >
                            </div>
                        </div>
                    </div>
                </div>

                <div class=form-group>
                  <div class="half">
                    <div class="form-group">
                      <label for="id_type" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Service-Type"></span><span class=error></label>
                      <div class="form-group">
                          <select id="id_type" name="type" class=form-control>
                              <option value="" data-i18n="Provider-Registration-Form.Form-Sections.Basic.Service-Type-Choose"></option>
                          </select>
                      </div>
                    </div>
                  </div>

                  <div class="half">
                    <div class="form-group">
                      <label for="id_phone_number" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Phone-Number"></span><span class=error></label>
                      <div class="form-group">
                        <input id="id_phone_number" type="tel" name="phone_number" class="form-control" >
                      </div>
                    </div>
                  </div>


                </div>

                <div class="form-group">
                  <div class=half>
                      <label for="id_website" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Website"></span><span class=error></label>
                      <div class="form-group">
                        <input id="id_website" type="url" name="website" class="form-control" placeholder="Enter your website url" >
                      </div>
                  </div>
                  <div class=half>
                      <label for="id_number_of_monthly_beneficiaries" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.MonthlyBeneficiaries"></span><span class=error></label>
                      <div class="form-group">
                          <input id="id_number_of_monthly_beneficiaries" required type="number" name="number_of_monthly_beneficiaries" class="form-control">
                      </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="id_description" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Description"></span><span class=error></label>
                  <div class="form-group">
                    <textarea id="id_description" rows="4" name="description" data-i18n-field class="form-control" ></textarea>
                  </div>
                </div>
              </fieldset>

              <div class="submit-form">
                  <div class="half">
                    <button class="form-btn-submit primary-button" tabindex="17" data-i18n="Provider-Registration-Form.Form-Sections.Form-Submit-Options.Submit"></button>
                  </div>
                  <div class="half">
                    <button class="form-btn-clear primary-button" tabindex="18" data-i18n="Provider-Registration-Form.Form-Sections.Form-Submit-Options.Clear"></button>
                  </div>
              </div>
            </form>

            </div>
          </div>
        </div>

<!-- End Forms -->

<!-- End Main Content -->
