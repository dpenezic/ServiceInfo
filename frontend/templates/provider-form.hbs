<!-- Page Head -->
    <div class="page-head">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2">
                    <div class="page-title" data-i18n="Provider-Registration-Form.Page-Head.Page-Title.Title"></div>
                    <div class="page-descr" data-i18n="Provider-Registration-Form.Page-Head.Page-Description.Page-Description"></div>
                </div>
            </div>
        </div>
    </div>
<!-- End Page Head -->

<!-- Main Content -->

<!-- Forms -->
      <div class="main-content">
        <div class="container">
          <div class="row">
            <div class="col-sm-8 col-sm-offset-2">

            <form>
              <fieldset>
                <legend data-i18n="Provider-Registration-Form.Form-Sections.Basic.Legend"></legend>

                <div class="form-group">
                  <div class="half">
                    <div class="form-group">
                      <label for="name" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Name"></span><span class=error></label>
                      <input type="text" name="name" data-i18n-field class="form-control" tabindex="1"></input>
                    </div>
                  </div>

                  <div class="half">
                      <div class="form-group">
                          <label for="email" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Email"></span><span class="error"></span></label>
                          <div class="form-group">
                              <input type="email" name="email" class="form-control" placeholder="Enter your Email" tabindex="4">
                          </div>
                      </div>
                  </div>
                </div>

                <div class="form-group">
                    <div class="half">
                        <div class="form-group">
                            <label for="password1" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Password"></span><span class=error></label>
                                <input type="password" name="password1" data-i18n-field class="form-control" tabindex="1"></input>
                        </div>
                    </div>

                    <div class="half">
                        <div class="form-group">
                            <label for="password2" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.PasswordConfirm"></span><span class="error"></span></label>
                            <div class="form-group">
                                <input type="password" name="password2" class="form-control" tabindex="4">
                            </div>
                        </div>
                    </div>
                </div>

                <div class=form-group>
                  <div class="half">
                    <div class="form-group">
                      <label for="type" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Service-Type"></span><span class=error></label>
                      <div class="form-group">
                          <select name="type">
                              <option value=1>Type 1</option>
                              <option value=2>Type 2</option>
                              <option value=3>Type 3</option>
                              <option value=4>Type 4</option>
                              <option value=5>Type 5</option>
                          </select>
                      </div>
                    </div>
                  </div>

                  <div class="half">
                    <div class="form-group">
                      <label for="phone_number" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Phone-Number"></span><span class=error></label>
                      <div class="form-group">
                        <input type="tel" name="phone_number" class="form-control" tabindex="3">
                      </div>
                    </div>
                  </div>


                </div>

                <div class="form-group">
                  <label for="id_provider_website" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Website"></span><span class=error></label>
                  <div class="form-group">
                    <input type="url" name="website" class="form-control" placeholder="Enter your website url" tabindex="5">
                  </div>
                </div>
                <div class="form-group">
                  <label for="id_provider_description" class="control-label"><span data-i18n="Provider-Registration-Form.Form-Sections.Basic.Description"></span><span class=error></label>
                  <div class="form-group">
                    <textarea rows="4" name="description" data-i18n-field class="form-control" tabindex="6"></textarea>
                  </div>
                </div>
              </fieldset>

              <div class="submit-form">
                  <div class="half">
                    <button class="form-btn-submit primary-button" tabindex="17" data-i18n="Provider-Registration-Form.Form-Sections.Form-Submit-Options.Submit"></button>
                  </div>
                  <div class="half">
                    <button class="form-btn-clear primary-button" tabindex="18" data-i18n="Provider-Registration-Form.Form-Sections.Form-Submit-Options.Clear"></button>
                  </div>
              </div>
            </form>

            </div>
          </div>
        </div>

<!-- End Forms -->

<!-- End Main Content -->
